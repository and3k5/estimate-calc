{
    "name": "estimate-calc",
    "description": "A base for tools to help estimating projects",
    "version": "0.0.0",
    "private": true,
    "type": "module",
    "engines": {
        "node": "^20.19.0 || >=22.12.0"
    },
    "scripts": {
        "dev": "vite -c vite.app.config.ts",
        "build": "run-p build:*",
        "preview": "vite preview",
        "test:unit": "vitest run",
        "test": "run-s test:*",
        "build-app-only": "vite build -c vite.app.config.ts",
        "build:app": "run-p type-check \"build-app-only {@}\" --",
        "build:calc": "vite build -c vite.calc.config.ts",
        "type-check": "vue-tsc --build",
        "lint:oxlint": "oxlint . --fix -D correctness --ignore-path .gitignore",
        "lint:eslint": "eslint . --fix",
        "lint": "run-s lint:*",
        "format": "prettier --write src/"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/and3k5/estimate-calc.git"
    },
    "author": "",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/and3k5/estimate-calc/issues"
    },
    "homepage": "https://github.com/and3k5/estimate-calc#readme",
    "devDependencies": {
        "@prettier/plugin-oxc": "^0.0.4",
        "@tsconfig/node22": "^22.0.2",
        "@types/jsdom": "^21.1.7",
        "@types/node": "^22.16.5",
        "@vitejs/plugin-vue": "^6.0.1",
        "@vitest/eslint-plugin": "^1.3.4",
        "@vue/eslint-config-prettier": "^10.2.0",
        "@vue/eslint-config-typescript": "^14.6.0",
        "@vue/test-utils": "^2.4.6",
        "@vue/tsconfig": "^0.7.0",
        "eslint": "^9.31.0",
        "eslint-plugin-oxlint": "~1.8.0",
        "eslint-plugin-vue": "~10.3.0",
        "jiti": "^2.4.2",
        "jsdom": "^26.1.0",
        "npm-run-all2": "^8.0.4",
        "oxlint": "~1.8.0",
        "prettier": "3.6.2",
        "sass-embedded": "^1.92.1",
        "typescript": "~5.8.0",
        "vite": "^7.0.6",
        "vite-plugin-vue-devtools": "^8.0.0",
        "vitest": "^3.2.4",
        "vue-tsc": "^3.0.4"
    },
    "dependencies": {
        "pinia": "^3.0.3",
        "vue": "^3.5.18",
        "vue-router": "^4.5.1"
    }
}
